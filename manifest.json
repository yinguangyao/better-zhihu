{
"name": "更好的知乎",
"version": "1.0.0",
"manifest_version": 2,
"description": "提升知乎阅读体验",
"background_page": "bg.html",
"content_scripts": [
    {
      "matches": ["http://*.zhihu.com/*","https://*.zhihu.com/*"],
      "js": ["javascript/jquery.js", "javascript/myscript.js"]
    }
  ],
"browser_action": {
	"default_title": "更好的知乎",
	"default_icon": "images/zhihu.png",
	"default_popup": "popup.html"
  }
}